<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip"/>
            <gradient
                android:startColor="#4D000000"
                android:centerColor="#4D000000"
                android:centerY="1.0"
                android:endColor="#4D000000"
                android:angle="270"
                />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip"/>
                <gradient
                    android:startColor="#0E50F8"
                    android:centerColor="#438EFF"
                    android:centerY="1.0"
                    android:endColor="#88CBFF"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>